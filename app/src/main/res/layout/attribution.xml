<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attribution_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Code by:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/attribution_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/attribution_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roy Watson"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/attribution_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attribution_label"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/attribution_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rwatson@dela.com"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/attribution_web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attribution_name"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/attribution_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.dela.com"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attribution_email"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>